{% extends '::base.html.twig' %}
{% block title %}عملاء الشغل{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
     <!-- DataTables CSS -->
    <link href="{{ asset('css/plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}عملاء الشغل{% endblock %}


{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    بيانات العملاء
                </div>
                
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-list">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>الاسم كامل</th>
                                    <th>الاسم المتداول</th>
                                    <th>العنوان</th>
                                    <th>الهاتف</th>
                                    <th>المحمول</th>
                                    <th>نوع العلاقة</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('dealer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.name }}</td>
                                    <td>{{ entity.nickname }}</td>
                                    <td>{{ entity.address }}</td>
                                    <td>{{ entity.phone }}</td>
                                    <td>{{ entity.mobile }}</td>
                                    <td>{{ entity.relation }}</td>
                                    <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('dealer_show', { 'id': entity.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('dealer_edit', { 'id': entity.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <!-- DataTables JavaScript -->
    <script src="{{ asset('js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
    $(document).ready(function() {
        $('#dataTables-list').dataTable();
    });
    </script>
{% endblock %}
