{% extends '::base.html.twig' %}
{% block title %}عميل جديد{% endblock %}

{% block header %}عميل جديد{% endblock %}

{% block body -%}

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            بيانات العميل
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                        {{ form_start(form,{'attr': {'role':'form'} }) }}
                                        <div class="form-group">
                                            <label>الاسم  بالكامل</label>
                                            {{ form_widget(form.name, { 'attr' : { 'class': 'form-control', 'placeholder': 'ادخل الاسم بالكامل' } }) }}
                                            {{ form_errors(form.name) }}
                                            <p class="help-block">يجب ان يكون الاسم صجيجا.</p>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <label>الاسم المتداول  *</label>
                                                    {{ form_widget(form.nickname, { 'attr' : { 'class': 'form-control', 'placeholder': 'ادخل الاسم المتداول ' } }) }}
                                                    {{ form_errors(form.nickname) }}
                                                    <p class="help-block">ادخل اسما مشهورا به.</p>
                                                </div>
                                                    <div class="col-md-4">
                                                        <label> علاقتك بالعميل*</label>
                                                        {{ form_widget(form.relation, { 'attr' : { 'class': 'form-control' } }) }}
                                                        {{ form_errors(form.relation) }}
                                                    </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>عنوان العميل*</label>
                                            {{ form_widget(form.address, { 'attr' : { 'class': 'form-control', 'rows': '3', 'placeholder': 'ادخل العنوان ' } }) }}
                                            {{ form_errors(form.address) }}
                                        </div>
                                            
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">03</span>
                                            {{ form_widget(form.phone, { 'attr' : { 'class': 'form-control', 'placeholder': 'ادخل رقم الهاتف ' } }) }}
                                            {{ form_errors(form.phone) }}
                                            
                                            <span class="input-group-addon">+20</span>
                                            {{ form_widget(form.mobile, { 'attr' : { 'class': 'form-control', 'placeholder': 'ادخل رقم المحمول ' } }) }}
                                            {{ form_errors(form.mobile) }}
                                        </div>

                                        <input type="submit" class="btn btn-primary" value="تعديل"/>
                                        <a href="{{ path('dealer') }}" class="btn btn-default">ارجع للقائمة</a>
                                        <a href="{{ path('dealer_delete', { 'id': form.vars.value.id }) }}" class="btn btn-danger">امسح العميل</a>
                                    {{ form_end(form) }}
                                    </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6" style="border-left: 1px dotted lightgrey;">
                                        <i class="fa fa-user fa-5x" style="margin-left: 37%;margin-top: 22%;font-size: 171px;color: cornflowerblue;"></i>                                    
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
 
{% endblock %}